{
  "name": "tlingit-electron",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "description": "Standalone Electron + Django app for Tlingit corpus exploration.",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.tlingit.app",
    "productName": "Tlingit App",
    "directories": {
      "output": "../dist_electron"
    },
    "files": [
      {
        "from": "../tlingit_app/dist/tlingit_backend",
        "to": "backend/tlingit_backend"
      },
      "**/*"
    ],

    "extraResources": [
      {
        "from": "../tlingit_app/dist/tlingit_backend",
        "to": "backend/tlingit_backend",
        "filter": ["**/*"]
      }
    ],


    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "identity": null,
      "sign": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  }
}
